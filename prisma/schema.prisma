enum DisputeStatus {
  OPEN
  RESOLVED_BUYER
  RESOLVED_SELLER
  CANCELLED
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

enum OfferType {
  BUY
  SELL
}

enum OfferStatus {
  ACTIVE
  INACTIVE
}

enum TradeStatus {
  PENDING
  PAID
  RELEASED
  DISPUTED
  COMPLETED
  CANCELLED
}

enum TransactionType {
  DEPOSIT
  TRANSFER
  INTERNAL_TRANSFER
  WITHSRAWAL
  ESCROW_IN
  ESCROW_OUT
  TRADE_PAYMENT
  TRADE_RELEASE
  TRADE_REFUND
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
}
